// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        


// ENUMS MUST BE DEFINED BEFORE THEY ARE USED 
enum UserRole {
  ADMIN
  TEACHER
  STUDENT
  PARENT
}

enum AdminRole {
  SUPER_ADMIN
  SCHOOL_OWNER
  PRINCIPAL
  REGISTRAR
  ACCOUNTANT
  SUPPORT
}

model School {
  id          String  @id @default(uuid())
  name        String
  subdomain   String? @unique
  schoolEmail String?
  tenantId    String  @unique
  address     String?
  phone       String?

  admins   SchoolAdmin[]
  teachers Teacher[]
  students Student[]
  classes  Class[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SchoolAdmin {
  id       String    @id @default(uuid())
  adminId  String
  schoolId String
  role     AdminRole
  active   Boolean   @default(true) // Track if admin still works at the school

  admin  Admin  @relation(fields: [adminId], references: [id], onDelete: Cascade)
  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([adminId, schoolId])
  @@map("school_admins")
}

// Add to your existing schema
model Admin {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  password        String
  role            UserRole
  tenantIds       String[] @default(["default-tenant-id"])
  defaultTenantId String   @default("default-tenant-id") // <- new default field
  verified        Boolean  @default(false)
  status          String   @default("PENDING")

  schoolAdmins SchoolAdmin[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Teacher {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  password        String
  role            UserRole
  tenantIds       String[] @default(["default-tenant-id"])
  defaultTenantId String   @default("default-tenant-id") // <- new default field
  teacherCode     String   @unique
  subject         String?
  department      String?
  school          School?  @relation(fields: [schoolId], references: [id])
  schoolId        String?
  classes         Class[]
  verified        Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Student {
  id              String            @id @default(uuid())
  name            String
  email           String            @unique
  password        String
  studentCode     String            @unique
  teacherCode     String?
  tenantIds       String[]          @default(["default-tenant-id"])
  defaultTenantId String            @default("default-tenant-id") // <- new default field
  gradeLevel      String?
  dateOfBirth     DateTime?
  role            UserRole
  school          School?           @relation(fields: [schoolId], references: [id])
  schoolId        String?
  classes         ClassEnrollment[]
  parentLinks     ParentChildLink[]
  verified        Boolean           @default(false)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model Parent {
  id              String            @id @default(uuid())
  fullName        String
  email           String            @unique
  password        String
  phone           String?
  role            UserRole
  tenantIds       String[]          @default(["default-tenant-id"])
  defaultTenantId String            @default("default-tenant-id") // <- new default field
  children        ParentChildLink[]
  verified        Boolean           @default(false)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@map("parents")
}

model ParentChildLink {
  id           String   @id @default(uuid())
  parentId     String
  studentId    String
  relationship String   @default("parent")
  status       String   @default("pending")
  createdAt    DateTime @default(now())

  parent  Parent  @relation(fields: [parentId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([parentId, studentId])
  @@map("parent_child_links")
}

model Class {
  id        String  @id @default(uuid())
  name      String
  subject   String
  section   String?
  schoolId  String
  teacherId String?

  school      School            @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  teacher     Teacher?          @relation(fields: [teacherId], references: [id])
  enrollments ClassEnrollment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([schoolId, name, section])
  @@map("classes")
}

model ClassEnrollment {
  id        String @id @default(uuid())
  classId   String
  studentId String

  class   Class   @relation(fields: [classId], references: [id], onDelete: Cascade)
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  enrolledAt DateTime @default(now())

  @@unique([classId, studentId])
  @@map("class_enrollments")
}

model VerificationCode {
  id        String   @id @default(uuid())
  email     String
  code      String
  userType  UserRole // CHANGED: Use UserRole instead of UserType
  createdAt DateTime @default(now())
  expiresAt DateTime
  used      Boolean  @default(false)

  @@index([email])
  @@index([code])
  @@map("verification_codes")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  userType  UserRole // CHANGED: Use UserRole instead of UserType
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId, userType])
  @@map("refresh_tokens")
}


model PasswordReset {
  id        String   @id @default(cuid())
  email     String
  code      String
  userType  UserRole
  verified  Boolean  @default(false)
  used      Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([code])
  @@index([expiresAt])
  @@map("password_resets")
}